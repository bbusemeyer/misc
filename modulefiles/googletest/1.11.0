#%Module
set     pkg         googletest
set     version     1.11.0
set     root        /mnt/home/bbusemeyer/soft/googletest

proc ModulesHelp { } {
    puts stderr "Sets the environment for $pkg-$version"
}

module-whatis   "Sets the environment for $pkg-$version"

conflict $pkg intel/mpi intel/compiler

module                  load  gcc/7.5.0 openmpi/4.0.7 gmp/6.2.1
setenv       GOOGLETEST_BASE  $root
setenv     GTEST_INCLUDE_DIR  $root/include
setenv         GTEST_LIBRARY  $root/build/lib
#prepend-path           CPATH  $root/include
#prepend-path LD_LIBRARY_PATH  $root/build/lib
setenv            GTEST_ROOT  $root
